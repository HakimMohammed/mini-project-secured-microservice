<?xml version="1.0" encoding="UTF-8"?>
<!-- ================================================================= -->
<!-- OWASP Dependency-Check Suppression File -->
<!-- ================================================================= -->
<!-- Place this file in the root of each microservice -->
<!-- Use to suppress false positives or accepted risks -->
<!-- ================================================================= -->
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">

    <!-- ============================================================= -->
    <!-- Example: Suppress a specific CVE -->
    <!-- ============================================================= -->
    <!--
    <suppress>
        <notes><![CDATA[
            False positive - This vulnerability doesn't affect our usage
        ]]></notes>
        <cve>CVE-2023-12345</cve>
    </suppress>
    -->

    <!-- ============================================================= -->
    <!-- Example: Suppress by GAV (Group:Artifact:Version) -->
    <!-- ============================================================= -->
    <!--
    <suppress>
        <notes><![CDATA[
            Waiting for patch from vendor
        ]]></notes>
        <gav regex="true">^org\.example:example-lib:.*$</gav>
        <cve>CVE-2023-67890</cve>
    </suppress>
    -->

    <!-- ============================================================= -->
    <!-- Example: Suppress by file name -->
    <!-- ============================================================= -->
    <!--
    <suppress>
        <notes><![CDATA[
            Test dependency only, not in production
        ]]></notes>
        <filePath regex="true">.*test-framework.*\.jar</filePath>
    </suppress>
    -->

    <!-- ============================================================= -->
    <!-- Common Spring Boot False Positives -->
    <!-- ============================================================= -->
    <suppress>
        <notes><![CDATA[
            Spring Boot Actuator - Only exposed to internal monitoring
        ]]></notes>
        <gav regex="true">^org\.springframework\.boot:spring-boot-actuator.*$</gav>
        <cpe>cpe:/a:vmware:spring_boot</cpe>
    </suppress>

    <!-- ============================================================= -->
    <!-- Keycloak Dependencies -->
    <!-- ============================================================= -->
    <suppress until="2025-12-31">
        <notes><![CDATA[
            Keycloak client libraries - waiting for official patch
            Review date: 2025-12-31
        ]]></notes>
        <gav regex="true">^org\.keycloak:.*$</gav>
    </suppress>

    <!-- ============================================================= -->
    <!-- Development Dependencies -->
    <!-- ============================================================= -->
    <suppress>
        <notes><![CDATA[
            H2 Database - Only used for testing
        ]]></notes>
        <gav regex="true">^com\.h2database:h2:.*$</gav>
    </suppress>

    <suppress>
        <notes><![CDATA[
            Lombok - Compile-time only dependency
        ]]></notes>
        <gav regex="true">^org\.projectlombok:lombok:.*$</gav>
    </suppress>

</suppressions>